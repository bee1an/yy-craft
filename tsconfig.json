{
	"compilerOptions": {
		"module": "ESNext", // 打包模块类型ESNext
		"declaration": false, // 不生成.d.ts文件
		"noImplicitAny": true, // 是否允许隐式的any类型
		"removeComments": true, // 移除注释
		"moduleResolution": "node", // 模块解析方式为node
		"esModuleInterop": true, // 支持ES模块和CommonJS模块
		"noLib": false, // 不处理类库
		"target": "ES6", // 编译目标为ES6
		// "sourceMap": true, // 生成sourceMap
		"lib": ["ESNext", "DOM"], // 编译时使用的类库
		"allowSyntheticDefaultImports": true, // 允许默认导入
		"experimentalDecorators": true, // 启用装饰器
		"forceConsistentCasingInFileNames": true, // 区分文件名大小
		"resolveJsonModule": true, // 解析json模块
		"strict": true, // 严格模式
		"skipLibCheck": true, // 跳过类库检查
		"jsx": "preserve", // 保留jsx
		// "jsxFactory": "h",
		// "jsxFragmentFactory": "Fragment",
		// "jsxImportSource": "vue",
		"verbatimModuleSyntax": true,
		"types": ["vue-macros/macros-global"],
		"preserveSymlinks": true
	},
	"exclude": ["node_modules", "**/__tests__", "dist/**"] // 排除文件
}
